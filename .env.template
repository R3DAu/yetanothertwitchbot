DB_CONNECTION_LIMIT=10
# The Database Connection Timeout is used to identify the database connection timeout.
DB_CONNECTION_TIMEOUT=10000
# The Database Connection Idle Timeout is used to identify the database connection idle timeout.
DB_CONNECTION_IDLE_TIMEOUT=900000

